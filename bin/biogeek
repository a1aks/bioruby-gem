#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'jeweler/generator'
require 'bundler'
require 'bundler/cli'
require 'fileutils'
require 'bio-geek'


orig_argv=ARGV.clone
if (Jeweler::Generator::Application.run!(*ARGV)==0)
  pwd=FileUtils.pwd
  FileUtils.cd("bioruby-#{ARGV.shift}")
  ARGV<<"install"
  Bundler::CLI.start
#no need to go back
end